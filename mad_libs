<?php
function generateStory ($singular_noun, $verb, $color, $distance_unit) {
  $story = "\nThe $singular_noun are lovely, $color, and deep.\n But I have promises to keep,\n And $distance_unit to go before I $verb,\n And $distance_unit to go before I sleep.";
  return $story;
};
echo generateStory("dog","eat","purple", "km");
echo generateStory("car","cook","vermilion","km");
echo generateStory("empty","Speak","beige","km");
